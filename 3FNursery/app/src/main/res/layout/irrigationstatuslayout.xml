<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/mainlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:gravity="center"
                android:layout_weight="0.15"
                android:id="@+id/irrigationcode"
                android:textColor="@color/black"
                android:text="Irrigation Code "
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/regularlabourmale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="Regular Labour(Male)"
                android:textColor="@color/black" />

            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/regularlabourfemale"
                android:gravity="center"
                android:text="Regular Labour(Female)"
                android:layout_weight="0.15"
                android:textColor="@color/black"

                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/contractlabourmale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="Contract Labour(Male)"
                android:textColor="@color/black" />

            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:id="@+id/contractlabourfemale"
                android:text="Contract Labour(Female)"
                android:layout_weight="0.15"
                android:textColor="@color/black"

                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:id="@+id/txtSatusText"
                android:text=""
                android:layout_weight="0.15"
                android:textColor="@color/black"

                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:text="Log Date"
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:id="@+id/logdate"
                android:layout_height="match_parent" />




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>