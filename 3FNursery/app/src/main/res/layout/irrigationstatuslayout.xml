<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/whitepure"
        android:orientation="vertical"
        android:weightSum="1">




        <LinearLayout
            android:id="@+id/mainlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/image_more"
                android:src="@drawable/ic_expand_more_black_24dp">

            </ImageView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:id="@+id/image_less"
                android:src="@drawable/ic_expand_less_black_24dp"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_weight="0.1"
                android:id="@+id/irrigationcode"
                android:textColor="@color/black"
                android:text="Irrigation Code "
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>


            <TextView
                android:id="@+id/regularlabourmale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:gravity="center"
                android:text="Regular Labour(Male)"
                android:textColor="@color/black" />
            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/regularlabourmalecost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:gravity="center"
                android:text="Regular Male Cost"
                android:textColor="@color/black" />

            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/regularlabourfemale"
                android:gravity="center"
                android:text="Regular Labour(Female)"
                android:layout_weight="0.09"
                android:textColor="@color/black"

                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/regularlabourfemalecost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:gravity="center"
                android:text="Regular FeMale Cost"
                android:textColor="@color/black" />
            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/contractlabourmale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:gravity="center"
                android:text="Contract Labour(Male)"
                android:textColor="@color/black" />

            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>


            <TextView
                android:id="@+id/contractlabourmalecost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:gravity="center"
                android:text="Contract Male Cost"
                android:textColor="@color/black" />
            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:id="@+id/contractlabourfemale"
                android:text="Contract Labour(Female)"
                android:layout_weight="0.09"
                android:textColor="@color/black"

                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:id="@+id/contractlabourfemalecost"
                android:text="Contract Female Cost"
                android:layout_weight="0.09"
                android:textColor="@color/black"

                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>


            <TextView
                android:gravity="center"
                android:id="@+id/txtSatusText"
                android:text=""
                android:layout_weight="0.09"
                android:textColor="@color/black"

                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:text="Log Date"
                android:layout_weight="0.09"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:id="@+id/logdate"
                android:layout_height="match_parent" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:id="@+id/sublinearlayout"
            android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
       android:background="@color/light_gray"

            android:layout_gravity="center"
            android:weightSum="1">

            <TextView
                android:gravity="center"
                android:layout_weight="0.33"
                android:id="@+id/subirrigationcode"
                android:textColor="@color/black"
                android:text="Irrigation Code "
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/consignmentcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="Consignment Code"
                android:textColor="@color/black" />

            <LinearLayout
                android:background="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/consignmentstatus"
                android:gravity="center"
                android:text="Consignment Status"
                android:layout_weight="0.33"
                android:textColor="@color/black"

                android:layout_width="0dp"
                android:layout_height="match_parent" />



        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sub_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/whitepure"
            android:layout_marginBottom="20dp" />

        </LinearLayout>
    </LinearLayout>

